@model WebApplicatationPollService.Models.Entities.PollEntity

@{
    ViewBag.Title = "PollResult";
    int counter = 0;
    foreach (var item in Model.Answers) {
        counter += item.Votes;
    }
    int percent;
}

<h2>PollResult</h2>

<div class="jumbotron">
    <h2>@Model.Question</h2>

    @foreach (var item in Model.Answers) {
        <p>@item.Answers [@item.Votes]</p>
        <div class="progress">
            @{ percent = item.Votes / counter;}
            <div class="progress-bar" role="progressbar" aria-valuenow="@percent.ToString()" aria-valuemax="100"
                 aria-valuemin="0" style="@String.Format( "width:{0}%", percent.ToString() )">
                @String.Format("{0}%", percent.ToString())
            </div>
        </div>
    }
    <p>@string.Format("Votes: {0}", Model.)</p>
    <div class="btn-link">
        <button class="btn btn-info input-lg" onclick="location.href='@Url.Action("PollVote", new {id=Model.Id })';">
            <span class="glyphicon glyphicon-pencil"></span>       Vote
        </button>
    </div>
</div>

<p>@Model.DateTime</p>
