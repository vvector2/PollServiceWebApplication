
@model WebApplicatationPollService.Models.ViewModels.TableModelView<WebApplicatationPollService.Models.Entities.PollEntity>
@{
    ViewBag.Title = "Explore";
    Layout = "~/Views/shared/_TableLayout.cshtml";
}

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                Id <span onclick="Sort('Id','Desc')" class="far fa-caret-down"></span>
                <span onclick="Sort('Id','ASC')" class="fas fa-sort-up"></span>
            </th>
            <th>
                Question <span onclick="Sort('Question','Desc')" class="fas fa-sort-down"></span>
                <span onclick="Sort('Question','ASC')" class="fas fa-sort-up"></span>
            </th>
            <th>
                Views <span onclick="Sort('Views','Desc')" class="fas fa-sort-down"></span>
                <span onclick="Sort('Views','ASC')" class="fas fa-sort-up"></span>
            </th>
            <th>
                Creation <span onclick="Sort('DateTime','DESC')" class="fas fa-sort-down"></span>
                <span onclick="Sort('DateTime','ASC')" class="fas fa-sort-up"></span>
            </th>
            <th>
                UserChecking <span onclick="Sort('UserChecking','DESC')" class="fas fa-sort-down"></span>
                <span onclick="Sort('UserChecking','ASC')" class="fas fa-sort-up"></span>
            </th>
            <th>
                UserCreator <span onclick="Sort('UserCreator','DESC')" class="fas fa-sort-down"></span>
                <span onclick="Sort('UserCreator','ASC')" class="fas fa-sort-up"></span>
            </th>
            <th>Delete User</th>
        </tr>
    </thead>
    <tbody id="tableContent">
        @foreach (var item in Model.Elements) {
            <tr>
                <td>@Html.ActionLink(item.Id.ToString(), "PollVote", new { id=item.Id})/td>
                <td>@item.Question</td>
                <td>@item.View</td>
                <td>@item.DateTime</td>
                <td>@item.UserChecking</td>
                <td>@Html.ActionLink(item.UserCreator.UserName, "UserProfile", "UserController",new { item.UserCreator.Id },null ) </td>
                <td>
                    @Html.BeginForm("DeletePoll", "Admin", FormMethod.Post) {
                    @Html.AntiForgeryToken();
                    <input type="hidden" value="@item.Id" />
                    <input type="submit" value="Delete" class=" btn btn-danger" />
                    }
                </td>
            </tr>
        }
    </tbody>
</table>



